.home-wrap{
  width: 100%;
  height: auto;
 overflow-x: hidden;
  overflow-y: scroll;
  box-sizing: border-box;
  background-color: #f2f2f2;
  min-height: 100%;
}
/* banner */
.banner {
	height: 270rpx;
}
.banner image {
	width: 100%;
	height: 100%;
}
.banner .course-name {
	width: 100%;
	height: 60rpx;
  line-height: 60rpx;
  padding-left: 12rpx;
  text-align: left;
  /* background: #000; */
  background: linear-gradient(to bottom, #000 , #101010);
  
  font-size: 32rpx;
  color: #fff;
  opacity: .4;
  position: absolute;
  left: 0;
  bottom:0;
}
/* 当前直播 */
 .curLive{
   width: 100%;
  height: auto;
  background: #fff;
  padding: 10px;
 }
 .curLive .title{
   height:80rpx;
   line-height: 80rpx;
   color: #101010;
   font-size: 32rpx; 
   float: left;
 }
  .curLive .curIcon{width:45rpx;height:45rpx;margin-top: 20rpx;margin-left: 10rpx;display: block;float: left}
  .curLive .curWrap{
    width:100%;
    height:320rpx;
    clear:both;
    margin-bottom:20rpx;
   }

 .curLive swiper{
  height: 100%;
}
 .curLive .content{
  font-size: 16px;
  color: #333;
}
 .curLive swiper-item{							
  width:auto;
  height:240rpx;
   padding-right:37rpx;
   box-sizing: border-box;
}

.curLive swiper-item .curImg{
  width: 100%;
  height: 260rpx;
  position: relative;
}
 .curImg image{
  width: 100%;
  height: 100%;
  display: block;
  border-radius: 15rpx 15rpx 0 0;
}
 .curLive swiper-item .courseName{
   box-sizing: border-box;
  width: 100%;
  height: auto;
  line-height: 60rpx;
  font-size: 26rpx;
  text-align: left;
  background: #f2f2f2;
  padding: 0 10rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
 .curLive .liveing-icon-wrap{
   position: absolute;
   top:0;
   right:0;
   width:auto;
   height:42rpx;
   line-height: 42rpx;
   padding: 0 5rpx;
   border-radius: 0 15rpx 0 0;
   background: rgba(0,0,0,0.3);
   display: flex;
   justify-content: space-between;
   align-items: center;
   
 }
 .liveing-icon-wrap .liveing-txt{
   color: #07c160;
   font-size: 22rpx;
 }
  .liveing-icon-wrap image{
    width:20rpx;
    height:15rpx;
  }
 .curLive swiper-item .box{							
  width: 100%;
  height:100px;
  margin-top: 40px;
  box-sizing: border-box;
  box-shadow: 0 0 4px 4px #f2f2f2;  
}
.noCurrent{
  width:100%;
  height:80rpx;
  line-height: 80rpx;
  display: block;
  box-sizing: border-box;
  clear: both;
  color:#cecece;
  font-size:28rpx;
  padding-left:30px;

  

}
/* 历史回放 */
 .historyLive{
   width:100%;
   height:auto;
   min-height: 600rpx;
   background:#f2f2f2;
    padding-bottom:50rpx;
    overflow:hidden;
    position:relative;
    padding-top:20rpx;

 }
 .historyLive .title{
   height:80rpx;
   line-height: 80rpx;
   color: #101010;
   font-size: 32rpx; 
   padding-left: 20rpx;
   float: left;
 }
  .historyLive .hisIcon{width:45rpx;height:45rpx;margin-top: 18rpx;margin-left: 10rpx;display: block;float: left;}
   .historyLive .willMore-btn{
     float: right;
     color: #333;
     font-size: 28rpx;
     height: 80rpx;
     line-height: 80rpx;
     margin-right: 20rpx;

   }
 .historyLive .hisWrap{
   width:auto;
   height:auto;
    padding:0 18rpx;
    position: relative;
    clear: both;
 }
 .hisWrap .hisItem{
   width:100%;
   height:240rpx;
   background: #fff;
    margin-bottom: 20rpx;
   clear: both;
   border-radius: 8rpx;
   box-sizing: border-box;
   position: relative;
   display: flex;
   justify-content: center;
   align-items: center;
 }
 .hisWrap .hisItem:active{
   background: #e2e4e5;
 }
 .hisWrap .hisItem image{
    float:left;
    width:220rpx;
    height:220rpx;
    border-radius:8rpx;
    position:relative;
    overflow:hidden;
    display: block;
    box-sizing: border-box;
   }
 .hisWrap .hisItem .wrap-r{
   width:470rpx;
  height:100%;
  float:left;
  box-sizing: border-box;
  overflow: hidden;
  padding-top: 7rpx;
}
 .hisItem .wrap-r .course-name{height:70rpx;line-height: 70rpx;display: block;padding-left: 18rpx;
  font-size: 33rpx;
  overflow: hidden;
  /* text-overflow:ellipsis;
  white-space: nowrap; */
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
}
 .hisItem .wrap-r .home-time{
   width:100%;
  height:auto;
    padding-left: 20rpx;
   padding-right: 18rpx;
   display: flex;
   flex-flow: column;
   justify-content: flex-start;
   margin-bottom: 10rpx;

 }

  .home-time .timeLi{
     height:57rpx;
   line-height: 57rpx;
    font-size: 30rpx;
   color: #676a6d;
  }
  .home-time .timeLi:nth-child(1){
    color: #333;
  }
 .home-desc{
   margin-top: 10rpx;
   width: 100%;
   height: auto;
   overflow: hidden;
   float: left;
   font-size: 28rpx;
   color: #676a6d;
   box-sizing: border-box;
   padding-left: 20rpx;
   padding-right: 20rpx;
    max-width: 400px;
    margin: 0 auto;
    line-height: 1.4;
     display: block;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    text-overflow: ellipsis;
 }
 
 .bottom-tips{
   text-align: center;
   width:100%;
   height:60rpx;
   line-height: 60rpx;
   color: #cecece;
   font-size: 28rpx;
 }
 /* 倒计时 */
.daojishi-wrap{
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999；
}
.daojishi-domal{
  width:100%;
  height:100%;
  position: absolute;
  left: 0;
  top:0;
  background: #000;
  opacity: .6;
}
.daojishi-con{
  display: flex;
  flex-flow: column;
  justify-content: center;
  border: 1rpx solid #07c764;
  padding: 30rpx;
   box-shadow: 0 0 50rpx  #07c160;
    border-radius: 50%;
    align-items: center;
    position: absolute;
    left: 50%;
    top:50%;
    margin-left: -60rpx;
    margin-top: -90rpx;
    width:120rpx;
    height:120rpx;
}
.daojishi-txt{
  font-size: 24rpx;
  color: #fff;
  height:55rpx;
  line-height: 55rpx;
}
.daojishi-count{
  color: #fff;
  font-size: 45rpx;
}
.daojishi-wrap .min{
  font-size: 24rpx;
  color: #fff;
}
/* 已购买 */

.payed-txt{
  position: absolute;
  right:20rpx;
  bottom: 0rpx;
  width: 70rpx;
  height:70rpx;
}
.willMore-bottom{
  width:100%;
  height:60rpx;
  line-height: 60rpx;
  color: #07c160;
  text-align: center;
  font-size: 30rpx;
}
