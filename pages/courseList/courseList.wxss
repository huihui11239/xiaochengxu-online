@import "../../template/noData/template.wxss";
.cl-bg{width:100%;height:130rpx;position: absolute;top: 0;}

.cl-title {
  height:100rpx;
  line-height: 100rpx;
  font-size: 16px;
  color: #282828;
  background: #fff;
  padding: 0 0.18rem;
  background: linear-gradient(top, #9cd684 0%, #a8de92 100%);
}

.cl-wrap {
  /* background: #f2f2f2; */
  padding: 25rpx;
  position: absolute;top: 10rpx;
   width: 100%;
  height: auto;
  box-sizing: border-box;
  
}

.cl-item {
  width: 100%;
  height: 240rpx;
  background: #fff;
  display: flex;
  margin-bottom: 30rpx;
  border-radius: 5px;
  box-shadow: 1rpx 1rpx 5px #73dba5;
  position: relative;

}

.cl-item-l {
  width: 35%;
  overflow: hidden;
  height: 100%;
}

.cl-item-l image {
  width: 100%;
  height: 100%;
  border-radius: 5px 0 0 5px;
}

.cl-item-r {
  width: 57%;
  height: auto;
  overflow: hidden;
  padding: 18rpx;
  padding-top: 10rpx;
  float: left;
}


.cl-item-r div {
  width: 100%;
  font-size: 20px;
  border-radius: 0 5px 5px 0;
  height: 60rpx;
  line-height: 60rpx;
}

.cl-item-r .courseName {
   margin-top: 10rpx;
  font-size: 16px;
  color: #333333;
  height:40rpx;
  line-height: 40rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}

.cl-item-r .publicTime {
  font-size: 14px;
  color: #c2c2c2;
  margin-top: 15rpx;
  height:40rpx;
  line-height: 40rpx;
}
.cl-item-r .desc {
  font-size: 14px;
  color: #676a6d;
  margin-top: 20rpx;
  height:auto;
  text-overflow:ellipsis;
  overflow:hidden;
  display:-webkit-box;
  -webkit-line-clamp:2; 
  -webkit-box-orient:vertical;


}

