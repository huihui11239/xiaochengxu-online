/* 没有授权的时候弹窗  */
.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #4c4c4c;
  z-index: 9000;
}
 
.modalDlg{
  width:70%;
  height:300rpx;
  z-index:9999;
  position:fixed;
  top:50%;
  left:15%;
  margin-top: -200rpx;
  background-color:#fff;
  border-radius:36rpx 36rpx 0 0;
  display:flex;
  
  flex-direction:column;
  align-items:center;
}
.modalDlg .modal-txt{
  text-align: center;
  width:100%;
  height:200rpx;
  line-height: 200rpx;
  font-size: 33rpx;
}

.btn-wrap{
  width:100%;
  height:100rpx;
 
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1rpx solid #c2c2c2;
  
}
.btn-wrap .modalCancel{
  width:100%;
  height:100%;
   line-height: 100rpx;
  border-right:1rpx solid #e2e2e2;
   font-size: 33rpx;
}
.btn-wrap .modalGetUserInfo{
   width: 100%;
   height: 100%;
    line-height: 100rpx;
    font-size: 33rpx;
}

/* close */
.closeDialog{
  position: fixed;
  bottom: 150rpx;
  left:50%;
  margin-left: -30rpx;
  width:60rpx;
  height:60rpx;
}
.closeDialog image{
  width:60rpx;
  height:60rpx;
}